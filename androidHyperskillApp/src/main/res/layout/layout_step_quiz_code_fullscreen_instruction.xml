<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        android:id="@+id/stepQuizCodeFullscreenInstructionLayout"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/stepQuizCodeFullscreenInstructionPracticeCompletion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginHorizontal="20dp"
            android:drawablePadding="4dp"
            android:gravity="center_vertical"
            android:textAppearance="?textAppearanceBody2"
            android:textColor="?android:textColorSecondary"
            tools:drawableStart="@drawable/ic_time"
            tools:text="3 minutes reading" />

        <include
            android:id="@+id/stepQuizCodeFullscreenInstructionTextHeader"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            layout="@layout/step_text_header" />

        <include
            android:id="@+id/stepQuizCodeFullscreenInstructionDetails"
            layout="@layout/layout_step_quiz_code_details" />

    </LinearLayout>

</androidx.core.widget.NestedScrollView>