<?xml version="1.0" encoding="utf-8"?>
<HorizontalScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    tools:background="@drawable/step_quiz_parsons_line_selected_background"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingVertical="18dp"
        android:paddingStart="16dp"
        android:paddingEnd="8dp"
        >

        <TextView
            android:id="@+id/stepQuizParsonsLineTabs"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:textColor="@color/color_on_surface_alpha_38"
            android:maxLines="1"
            tools:text="@string/step_quiz_parsons_tab"
            />

        <TextView
            android:id="@+id/stepQuizParsonsLineTextView"
            android:layout_height="wrap_content"
            android:layout_width="0dp"
            android:layout_gravity="bottom"
            android:layout_weight="1"
            android:textSize="14sp"
            android:maxLines="1"
            tools:text="Reader reader = new FileReader(“file.txt”); Reader reader = new FileReader(“file.txt”);"/>

    </LinearLayout>

</HorizontalScrollView>