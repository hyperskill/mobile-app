<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingVertical="16dp"
    android:paddingStart="20dp"
    tools:ignore="RtlSymmetry">

    <org.hyperskill.app.android.ui.custom.LoadingView
        android:id="@+id/firstSkeleton"
        android:layout_width="100dp"
        android:layout_height="20dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/secondSkeleton"
        app:layout_constraintStart_toStartOf="parent"/>

    <org.hyperskill.app.android.ui.custom.LoadingView
        android:id="@+id/secondSkeleton"
        android:layout_width="200dp"
        android:layout_height="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/firstSkeleton"
        app:layout_constraintStart_toStartOf="parent"/>

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/stepQuizTableChevron"
        android:layout_width="48dp"
        android:layout_height="48dp"
        app:srcCompat="@drawable/ic_chevron_forward"
        android:alpha="0.2"
        android:layout_marginTop="1dp"
        android:layout_marginEnd="1dp"
        android:padding="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_chainStyle="packed"
        app:tint="?colorControlNormal" />

</androidx.constraintlayout.widget.ConstraintLayout>