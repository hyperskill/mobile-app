<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    >

    <org.hyperskill.app.android.ui.custom.LoadingView
        android:id="@+id/profileHeaderStub"
        android:layout_width="match_parent"
        android:layout_height="105dp"
        app:layout_constraintTop_toTopOf="parent"
        />

    <org.hyperskill.app.android.ui.custom.LoadingView
        android:id="@+id/profileStreakStub"
        android:layout_width="match_parent"
        android:layout_height="160dp"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@+id/profileHeaderStub"
        />

    <org.hyperskill.app.android.ui.custom.LoadingView
        android:id="@+id/profileProjectsStub"
        android:layout_width="0dp"
        android:layout_height="80dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="6dp"
        app:layout_constraintTop_toBottomOf="@+id/profileStreakStub"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/profileTracksStub"
        />

    <org.hyperskill.app.android.ui.custom.LoadingView
        android:id="@+id/profileTracksStub"
        android:layout_width="0dp"
        android:layout_height="80dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="6dp"
        app:layout_constraintTop_toBottomOf="@+id/profileStreakStub"
        app:layout_constraintStart_toEndOf="@+id/profileProjectsStub"
        app:layout_constraintEnd_toStartOf="@+id/profileGemsStub"
        />

    <org.hyperskill.app.android.ui.custom.LoadingView
        android:id="@+id/profileGemsStub"
        android:layout_width="0dp"
        android:layout_height="80dp"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@+id/profileStreakStub"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/profileTracksStub"
        />

    <org.hyperskill.app.android.ui.custom.LoadingView
        android:id="@+id/profileStudyReminderStub"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@+id/profileGemsStub"
        />

    <org.hyperskill.app.android.ui.custom.LoadingView
        android:id="@+id/profileBioStub"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@+id/profileStudyReminderStub"
        />


</androidx.constraintlayout.widget.ConstraintLayout>