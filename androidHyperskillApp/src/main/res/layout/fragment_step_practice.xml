<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include
        android:id="@+id/stepPracticeAppBar"
        layout="@layout/view_step_quiz_appbar" />

    <androidx.core.widget.NestedScrollView
        android:id="@+id/stepPracticeContainer"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        android:scrollbars="vertical"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="?colorSurface"
            android:orientation="vertical">

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/stepPracticeCompletion"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginHorizontal="20dp"
                android:drawablePadding="4dp"
                android:gravity="center_vertical"
                android:textAppearance="?textAppearanceBody2"
                android:textColor="?android:textColorSecondary"
                app:layout_constraintLeft_toLeftOf="@id/stepTheorySubtitle"
                app:layout_constraintTop_toBottomOf="@id/stepTheorySubtitle"
                tools:drawableStart="@drawable/ic_time"
                tools:text="3 minutes reading" />

            <FrameLayout
                android:id="@+id/stepTheoryContainer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <FrameLayout
                android:id="@+id/stepQuizHints"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingHorizontal="20dp"
                android:paddingBottom="20dp"
                android:visibility="gone"
                />

            <include
                android:visibility="gone"
                android:id="@+id/stepQuizCodeSamples"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                layout="@layout/layout_step_quiz_code_details" />

            <include
                android:id="@+id/stepQuizDescriptionDivider"
                layout="@layout/view_divider_vertical"
                android:layout_width="match_parent"
                android:layout_height="?dividerVerticalSize"
                android:layout_marginHorizontal="20dp" />

            <FrameLayout
                android:id="@+id/stepQuizContainer"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1" />

            <include
                layout="@layout/view_divider_vertical"
                android:visibility="gone"
                />

        </androidx.appcompat.widget.LinearLayoutCompat>
    </androidx.core.widget.NestedScrollView>
</androidx.coordinatorlayout.widget.CoordinatorLayout>