<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="ShapeAppearanceOverlay.App.RoundedCorners8" parent="">
        <item name="cornerSize">8dp</item>
    </style>

    <style name="RoundedBottomSheet" parent="@style/Widget.Design.BottomSheet.Modal">
        <item name="android:background">@drawable/bg_bottom_sheet_dialog</item>
    </style>

    <style name="Widget.AppTheme.Button" parent="@style/Widget.MaterialComponents.Button">
        <item name="android:stateListAnimator" tools:targetApi="lollipop">@null</item>
        <item name="elevation">0dp</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
    </style>

    <style name="Widget.AppTheme.Button.OutlinedButton" parent="@style/Widget.MaterialComponents.Button.OutlinedButton">
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
    </style>

    <style name="Widget.AppTheme.TextInputLayouts.InputText" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxCornerRadiusBottomStart">@dimen/corner_radius</item>
        <item name="boxCornerRadiusBottomEnd">@dimen/corner_radius</item>
        <item name="boxCornerRadiusTopStart">@dimen/corner_radius</item>
        <item name="boxCornerRadiusTopEnd">@dimen/corner_radius</item>
    </style>

    <!-- Auth -->
    <style name="ZeroSizeTextAppearance">
        <item name="android:textSize">0sp</item>
    </style>

    <style name="InfoError">
        <item name="android:theme">@style/ThemeOverlay.Red</item>
        <item name="android:background">@drawable/bg_shape_rounded</item>
        <item name="backgroundTint">@color/color_overlay_red_alpha_12</item>
        <item name="drawableTint">?android:textColorPrimary</item>
    </style>

    <style name="PlaceholderTextViewStyle">
        <item name="android:textAppearance">?textAppearanceBody1</item>
        <item name="android:textColor">?android:textColorSecondary</item>
        <item name="android:padding">@dimen/padding_placeholders</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="StepQuizFeedback">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:minHeight">48dp</item>
        <item name="android:paddingLeft">16dp</item>
        <item name="android:paddingRight">16dp</item>
        <item name="android:paddingTop">12dp</item>
        <item name="android:paddingBottom">12dp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textAppearance">?textAppearanceBody1</item>
        <item name="android:drawablePadding">16dp</item>
        <item name="android:background">@drawable/bg_shape_rounded</item>
    </style>

    <style name="StepQuizFeedback.Correct">
        <item name="backgroundTint">@color/color_green_200_alpha_12</item>
        <item name="android:textColor">@color/color_secondary</item>
        <item name="drawableTint">@color/color_secondary</item>
    </style>

    <style name="StepQuizFeedback.Wrong">
        <item name="backgroundTint">@color/color_blue_200_alpha_12</item>
        <item name="android:textColor">@color/color_primary</item>
        <item name="drawableTint">@color/color_primary</item>
    </style>

    <style name="StepQuizFeedback.Feedback">
        <item name="strokeColor">@color/color_on_surface_alpha_12</item>
        <item name="strokeWidth">1dp</item>
        <item name="background">@color/color_background</item>
    </style>

    <style name="StepQuizDescription">
        <item name="android:textAppearance">?textAppearanceCaption</item>
        <item name="android:textColor">?android:textColorSecondary</item>
    </style>

    <style name="StepQuizChoiceElement">
        <item name="android:padding">8dp</item>
        <item name="android:buttonTint">@color/color_on_surface_alpha_60</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="TableQuizRadioButton" parent="Widget.AppCompat.CompoundButton.RadioButton">
        <item name="colorControlActivated">@color/color_overlay_blue</item>
    </style>

    <style name="TableQuizCheckbox" parent="Widget.AppCompat.CompoundButton.CheckBox">
        <item name="colorControlActivated">@color/color_overlay_blue</item>
    </style>

    <style name="TrackIconStrokeOverlay">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>

    <style name="TrackIconStrokeStyle">
        <item name="strokeColor">@color/color_on_surface_alpha_12</item>
        <item name="strokeWidth">1dp</item>
        <item name="contentPadding">7dp</item>
    </style>

    <style name="TrackCardViewStyle">
        <item name="strokeWidth">1dp</item>
        <item name="cornerRadius">@dimen/corner_radius</item>
        <item name="strokeColor">@color/color_on_surface_alpha_9</item>
    </style>

    <style name="OutlinedCard">
        <item name="cornerRadius">@dimen/corner_radius</item>
        <item name="strokeColor">@color/color_on_surface_alpha_12</item>
        <item name="strokeWidth">1dp</item>
    </style>

    <style name="ColorSwitchStyle">
        <item name="colorControlActivated">@color/color_primary</item>
        <item name="colorSwitchThumbNormal">@color/color_on_primary</item>
        <item name="android:colorForeground">@color/color_on_surface_alpha_9</item>
    </style>

    <style name="AlertDialogTextStyle">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/color_on_background</item>
    </style>

    <style name="AlertDialogTitleStyle" parent="@style/TextAppearance.AppCompat.Body2">
        <item name="android:textSize">24sp</item>
    </style>

    <style name="AlertDialogRadioButtonStyle" parent="@style/Widget.MaterialComponents.CompoundButton.RadioButton">
        <item name="android:textColor">@color/color_on_background</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="AlertDialogOutlinedButton" parent="@style/Widget.MaterialComponents.Button.OutlinedButton">
        <item name="theme">@style/ThemeOverlay.Blue</item>
    </style>

    <style name="ThemeOverlay.App.MaterialAlertDialog" parent="ThemeOverlay.MaterialComponents.MaterialAlertDialog">
        <item name="colorSecondary">@color/color_primary</item>
        <item name="android:checkedTextViewStyle">@style/AlertDialogTextStyle</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="materialAlertDialogTitleTextStyle">@style/AlertDialogTitleStyle</item>
        <item name="buttonBarNegativeButtonStyle">@style/AlertDialogOutlinedButton</item>
    </style>

    <style name="ThemeOverlay.App.MaterialAlertDialog.ProfileSettingsConfirmDialog" parent="ThemeOverlay.MaterialComponents.MaterialAlertDialog">
        <item name="colorSecondary">@color/color_primary</item>
        <item name="android:checkedTextViewStyle">@style/AlertDialogTextStyle</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="materialAlertDialogTitleTextStyle">@style/AlertDialogTitleStyle</item>
    </style>
    
    <style name="Badge">
        <item name="android:paddingLeft">8dp</item>
        <item name="android:paddingRight">8dp</item>
        <item name="android:paddingTop">4dp</item>
        <item name="android:paddingBottom">4dp</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="Badge.Violet" parent="Badge">
        <item name="android:background">@drawable/bg_tag_violet</item>
        <item name="android:textColor">@color/color_overlay_violet</item>
    </style>

    <style name="Badge.Green" parent="Badge">
        <item name="android:background">@drawable/bg_tag_green</item>
        <item name="android:textColor">@color/color_secondary</item>
    </style>

    <style name="Badge.Blue" parent="Badge">
        <item name="android:background">@drawable/bg_tag_blue</item>
        <item name="android:textColor">@color/color_primary</item>
    </style>

    <style name="Badge.Orange" parent="Badge">
        <item name="android:background">@drawable/bg_tag_orange</item>
        <item name="android:textColor">@color/color_overlay_orange</item>
    </style>

</resources>