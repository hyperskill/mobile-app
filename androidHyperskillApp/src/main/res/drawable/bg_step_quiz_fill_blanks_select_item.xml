<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:id="@+id/step_quiz_fill_blanks_select_empty_layer">
        <shape android:shape="rectangle">
            <solid android:color="@color/color_on_surface_alpha_9"/>
            <corners android:radius="@dimen/step_quiz_fill_blanks_input_radius"/>
        </shape>
    </item>

    <item android:id="@+id/step_quiz_fill_blanks_select_empty_selected_layer">
        <shape android:shape="rectangle">
            <solid android:color="@color/color_on_surface_alpha_9"/>
            <stroke
                android:width="1dp"
                android:color="@color/color_primary"/>
            <corners android:radius="@dimen/step_quiz_fill_blanks_input_radius"/>
        </shape>
    </item>

    <item android:id="@+id/step_quiz_fill_blanks_select_filled_layer">
        <shape android:shape="rectangle">
            <solid android:color="@color/color_background_alpha_60"/>
            <stroke
                android:width="1dp"
                android:color="@color/color_on_surface_alpha_38"/>
            <corners android:radius="@dimen/step_quiz_fill_blanks_input_radius"/>
        </shape>
    </item>

    <item android:id="@+id/step_quiz_fill_blanks_select_filled_selected_layer">
        <shape android:shape="rectangle">
            <solid android:color="@color/color_background_alpha_60"/>
            <stroke
                android:width="1dp"
                android:color="@color/color_primary"/>
            <corners android:radius="@dimen/step_quiz_fill_blanks_input_radius"/>
        </shape>
    </item>

    <item android:drawable="@drawable/selectable_item_rounded_background" />
</layer-list>